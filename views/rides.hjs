<!DOCTYPE html>
<html>
<head>
  <title>my rides</title>
  <link rel='stylesheet' href='/styles/bootstrap.min.css' />
  <link rel='stylesheet' href='/styles/style.css' />
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>

<body>
  <h3>Fill the fields to simulate a ride</h3>
  <div class="container">
    <br />
    <br />
    <form class="form-horizontal">
      <div class="form-group">
        <label for="originDropdown" class="col-sm-2 control-label">Origin</label>
        <div class="col-sm-10">
          <select id="originDropdown" class="form-control">
            <!-- Options will be dynamically populated using JavaScript -->
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="destinationDropdown" class="col-sm-2 control-label">Destination</label>
        <div class="col-sm-10">
          <select id="destinationDropdown" class="form-control">
            <!-- Options will be dynamically populated using JavaScript -->
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="datePicker" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
          <input type="text" id="datePicker" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button id="submit" type="button" class="btn btn-primary">simulate</button>
        </div>
      </div>
    </form>

    <br/>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">status</th>
          <th scope="col">origin</th>
          <th scope="col">destination</th>
          <th scope="col">userid</th>
          <th scope="col">ticketid</th>
          <th scope="col">tripdate</th>
        </tr>
        {{#rides}}
        <tr>
          <td>{{id}}</td>
          <td>{{status}}</td>
          <td>{{origin}}</td>
          <td>{{destination}}</td>
          <td>{{userid}}</td>
          <td>{{ticketid}}</td>
          <td>{{tripdate}}</td>
        </tr>
        {{/rides}}
      </thead>
    </table>
    <br/>
  </div>
  <script>
    $(document).ready(function () {
      // Function to fetch stations and populate dropdowns
      function fetchStations() {
        $.ajax({
          type: "GET",
          url: "/api/v1/rides",
          success: function (data) {
            if (data) {
              data.sort((a, b) => a.id - b.id);
              // Populate origin dropdown
              const originDropdown = $("#originDropdown");
              originDropdown.empty();
              data.forEach(ride => {
                originDropdown.append(`<option value="${ride.origin}">${ride.origin}</option>`);
              });

              // Populate destination dropdown
              const destinationDropdown = $("#destinationDropdown");
              destinationDropdown.empty();
              data.forEach(ride => {
                destinationDropdown.append(`<option value="${ride.destination}">${ride.destination}</option>`);
              });
            }
          },
          error: function (err) {
            console.log("error message", err.responseText);
          }
        });
      }

      // Fetch stations on page load
      fetchStations();

      $("#simulate").click(function () {
        const originCode = $("#originDropdown").val();
        const destinationCode = $("#destinationDropdown").val();
        const selectedDate = $("#datePicker").val(); // retrieve selected date

        if (originCode && destinationCode && selectedDate) { // check if all fields are filled
          $.ajax({
            type: "GET",
            url: `/api/v1/ride/simulate`, // append date to URL
            success: function (data) {
              if (data) {
                $("#priceLabel").text(`Ticket price: ${data} EGP`);
              }
            },
            error: function (err) {
              console.log("error message", err.responseText);
            }
          });
        }
      });
    });
  </script>
</body>

</html>