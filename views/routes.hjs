<!DOCTYPE html>
<html>

<head>
  <title>Routes</title>
  <link rel='stylesheet' href='/styles/bootstrap.min.css' />
  <link rel='stylesheet' href='/styles/style.css' />
  <style>

  </style>
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>

<body>
  <div>
    <div>
      <nav class="navbar navbar-inverse" style="padding-left:130px;">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/dashboard">Home</a>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li><a href="/stations_example">Station</a></li>
              {{#isAdmin}}
              <li><a href="/users">Users</a></li>
              {{/isAdmin}}
              <li><a href="/subscriptions">Subscriptions</a></li>
              <li><a href="/tickets">Tickets</a></li>
              <li class = "opened-link"><a href="/routes">Routes</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="javascript:void(0)"
                  onclick="openCenteredWindow('/newpassword', 'Reset Password', 450, 440)">Reset Password</a></li>
              <li><a href="/">Logout</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <br />
    <div style="position:absolute; right:0;">
      {{#isAdmin}}
      <button id="addroute" type="button" class="btn btn-danger creditcard-button"
        onclick="openCenteredWindow('/addRoute', 'add route', 450, 440)">Add Route</button>
      <button id="updateroute" type="button" class="btn btn-danger creditcard-button"
        onclick="openCenteredWindow('/updateRoute', 'update route', 450, 440)">Update Route</button>
      {{/isAdmin}}
      <br />
    </div>

    <table class="table">
      <thead>
        <tr>
          <div style="position:absolute; right:0;">
          <th scope="col">id</th>
          <th scope="col">Route Name</th>
          <th scope="col">FromStationID</th>
          <th scope="col">ToStationID</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#routes}}
        <tr>
          <td>{{id}}</td>
          <td>{{routename}}</td>
          <td>{{fromstationid}}</td>
          <td>{{tostationid}}</td>
          <td>
            <div style="position:absolute; left: 1405px;">
              {{#isAdmin}}
              <button class="btn btn-danger delete-button" data-route-id="{{id}}">Delete</button>
              {{/isAdmin}}
            </div>
          </td>
        </tr>
        {{/routes}}
      </tbody>
    </table>
  </div>

  <script>
    $(document).ready(function () {
      $('.delete-button').click(function () {
        if (confirm('Are you sure you want to delete this route?')) {
          var routeID = $(this).data('route-id');
          $.ajax({
            type: 'DELETE',
            url: '/api/v1/route/:routeId' + routeID,
            success: function (data) {
              alert(data);
              // Remove the deleted row from the table
              $(this).closest('tr').remove();
              location.reload()
            },
            error: function (err) {
              alert(err.responseText);
            },
          });
        }

      });
    });

    function openCenteredWindow(url, title, width, height) {
      const screenWidth = window.screen.width;
      const screenHeight = window.screen.height;

      const left = (screenWidth / 2) - (width / 2);
      const top = (screenHeight / 2) - (height / 2);

      window.open(url, title, `width=${width},height=${height},left=${left},top=${top}`);
    }
  </script>
</body>

</html>
