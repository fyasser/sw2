<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <link rel='stylesheet' href='/styles/bootstrap.min.css' />
  <link rel='stylesheet' href='/styles/style.css' />
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <style>
    body {
      background-image: url('images/Backgound.png');
      background-repeat: no-repeat;
      background-size: cover;
    }
  </style>
</head>

<body>
  <script>
    $(document).ready(function () {
      const sessionToken = document.cookie.includes('session_token');
      if (!sessionToken) {
        location.href = '/';
      }
    });

    function openCenteredWindow(url, title, width, height) {
      const screenWidth = window.screen.width;
      const screenHeight = window.screen.height;

      const left = (screenWidth / 2) - (width / 2);
      const top = (screenHeight / 2) - (height / 2);

      window.open(url, title, `width=${width},height=${height},left=${left},top=${top}`);
    }
  </script>
  <div>
    <div>
      <nav class="navbar navbar-inverse" style="padding-left:130px;">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/dashboard">Home</a>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li><a href="/stations_example">Station</a></li>
              <li><a href="/users">Users</a></li>
              <li><a href="/subscriptions">Subscriptions</a></li>
              <li><a href="/tickets">Tickets</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              {{#isAdmin}}
              <li><a href="/dashboardAdmin" onclick="checkAdminAccess(event)">Admin Access</a></li>
              {{/isAdmin}}
              <li><a href="javascript:void(0)"
                  onclick="openCenteredWindow('/newpassword', 'Reset Password', 450, 440)">Reset Password</a></li>
              <li><a href="/">Logout</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
  <h2>Welcome {{firstname}}, you are logged in!</h2>
  <div class="image_price-container">
    <img src="/images/CheckPrice.jpg" alt="Image" class="image_price">
  </div>
  <button type="button" class="button_price" onclick="openCenteredWindow('/prices', 'Check Price', 650, 600)">Check
    Price for Ride</button>

  <div class="image_senior-container">
    <img src="/images/Senior.jpg" alt="Image" class="image_senior">
  </div>
  <button type="button" class="button_senior" onclick="openCenteredWindow('/senior', 'Senior Request', 450, 400)">Are
    you a Senior?</button>

    {{!-- <div class="image_rides-container">
    <img src="/images/ridejpg.jpg" alt="Image" class="image_rides"> --}}
  </div>
  <button type="button" class="button_rides" onclick="openCenteredWindow('/rides', 'rides', 450, 400)">check your rides</button>

  {{!-- <div class="image_ticket_container">
    <img src="/images/.jpg" alt="Image" class="image_ticket">
  </div>
  <button type="button" class="button_ticket" onclick="openCenteredWindow('/tickets', 'Purchase Ticket', 650, 600)">Purchase
    Ticket</button>
</body> --}}

</html>